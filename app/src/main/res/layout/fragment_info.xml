<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F49DA">

    <ImageView
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/back"
        app:tint="@color/white"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="?android:selectableItemBackgroundBorderless"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:text="Info"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:fontFamily="@font/orange"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:src="@drawable/quiz_img"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Assalomu alaykum men Javohir Oromov Bu Quiz Trivia dasturimni Gita mobil dasturchilar akademiyasining Bootcamp 10 guruhida uyga berilgan vazifalar asosida yaratdim Created by Javohir Oromov on 14/03"
        android:justificationMode="inter_character"
        android:paddingHorizontal="24sp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:fontFamily="@font/font1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>